#include <iostream>
#include <algorithm>
#include <vector>
#include <stack>
#include <queue>
#include <string>
#include <set>
#include <map>
#include <list>
#include <cstdlib>
#include <cstring>
#include <ctime>
#include <cstdio>
#include <cmath>
using namespace std;

int main()
{
    int n;
    int x[100010];
    int a;
    int seg[100010];
    int l[100010], r[100010];
    int len[100010];
    int p = 0;
    int ans = 2;
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &a);
        x[i] = a;
    }
    if (n == 1) {
        printf("1\n");
        return 0;
    }
    else if (n == 2) {
        printf("2\n");
        return 0;
    }

    for (int i = 0; i < n; i++) {
        if (i == 0) {
            l[p] = 0;
            len[p] = 0;
            r[p] = 0;
        }
        else {
            if (x[i] > x[i-1]) {
                r[p]++;
                len[p]++;
            }
            else {
                p++;
                l[p] = r[p] = i;
                len[p] = 0;
            }
        }
    }
    for (int i = 1; i < p-1; i++) {
        if (len[p] == 1) {
            if (x[l[p+1]] - x[r[p-1]] > 1) {
                ans = max(ans, len[p-1] + len[p] + len[p+1]);
            }
            else {
                ans = max(ans, len[p-1] + len[p]);
                ans = max(ans, len[p+1] + len[p]);
            }
        }
        else {
            if (len[p-1] == 1) {
                ans = max(ans, len[p] + 1);
            }
            else {
                if (x[l[p]] - x[r[p-2]] > 1) {
                    ans = max(ans, len[p-1] + len[p]);
                }
                if (x[l[p]+1] - x[r[p-1]] > 1) {
                    ans = max(ans, len[p-1] + len[p]);
                }
            }
        }
    }

    
    return 0;
}
