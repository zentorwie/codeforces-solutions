#include <iostream>
#include <algorithm>
#include <vector>
#include <stack>
#include <queue>
#include <string>
#include <set>
#include <map>
#include <list>
#include <cstdlib>
#include <cstring>
#include <ctime>
#include <cstdio>
#include <cmath>
using namespace std;
typedef long long ll;


int main()
{
    string ss, s;
    int k;
    s = "*";
    map<char,int> mp;
    s = s + ss;
    cin >> s;
    cin >> k;
    int maxm = 0;
    for (char c = 'a'; c <= 'z'; c++) {
        int v;
        cin >> v;
        mp[c] = v;
        maxm = max(maxm, v);
    }
    
    ll sum = 0;
    int l = ss.length();
    for (int i = 1; i <= l; i++) {
        sum += mp[s[i]] * (i+1);
    }
    ll right[1010] = {0};
    ll ori[1010] = {0};
    ori[l] = 0;
    right[l] = right[l+1] = 0;
    for (int i = l; i >= 1; i--) {
        ori[i] = ori[i+1] + mp[s[i]]*i;
        right[i] = right[i+1] + mp[s[i]]*(i+1);
    }
    ll left[1010] = {0};
    for (int i = 1; i <= l; i++) {
        left[i] = left[0] + mp[s[i]]*i;
    }
    
    ll ans = 0;
    for (int i = 0; i < k; i++) {
        ans += maxm*(l+1+i);
    }
    
    
    ll t = 0;
    
    
    
    return 0;
}
